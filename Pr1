#include <stdio.h>
#include <math.h>
 
int main()
{
    float a,b,angle,area;
    
    printf("First side(a) - ");
    scanf("%f",&a);
    
    printf("Second side(b) - ");
    scanf("%f",&b);
    
    printf("Angle between sides of triangle - ");
    scanf("%f",&angle);
    
    area = 0.5 * a * b * sinf(angle * (M_PI / 180));
    printf("Area of triangle - %f",area);   
}
